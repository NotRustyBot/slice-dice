{
    "compilerOptions": {
        "target": "ES2020",                  // or "ES2019" or "ESNext" based on your needs
        "module": "CommonJS",                 // Use CommonJS for Node.js
        "moduleResolution": "node",           // Ensures Node.js-style module resolution
        "outDir": "./dist",                   // Output compiled files to the 'dist' folder
        "rootDir": "./src",                   // The source folder for TypeScript files
        "esModuleInterop": true,              // Enables default imports for CommonJS modules
        "skipLibCheck": true,                 // Skips type checking of declaration files
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/**/*"]
  }